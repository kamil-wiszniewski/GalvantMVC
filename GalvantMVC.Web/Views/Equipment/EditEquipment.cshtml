@model GalvantMVC.Application.ViewModels.EditEquipmentVm

@{
    ViewData["Title"] = "EditEquipment";
}

<h1>EditEquipment</h1>

<div class="form-group">
    <label asp-for="NewEquipmentVm.Type" class="control-label"></label>
    <input asp-for="NewEquipmentVm.Type" class="form-control" />
    <span asp-validation-for="NewEquipmentVm.Type" class="text-danger"></span>
</div>

@if (Model.NewEquipmentVm.Type == "forklift")
{
    <div class="form-group">
        <label asp-for="AdditionalFieldsVm.Speed" class="control-label"></label>
        <input asp-for="AdditionalFieldsVm.Speed" class="form-control" />
        <span asp-validation-for="AdditionalFieldsVm.Speed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalFieldsVm.Weight" class="control-label"></label>
        <input asp-for="AdditionalFieldsVm.Weight" class="form-control" />
        <span asp-validation-for="AdditionalFieldsVm.Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalFieldsVm.LiftingCapacity" class="control-label"></label>
        <input asp-for="AdditionalFieldsVm.LiftingCapacity" class="form-control" />
        <span asp-validation-for="AdditionalFieldsVm.LiftingCapacity" class="text-danger"></span>
    </div>
}

